<h1>Users</h1> 

<div><%= link_to 'Create User', new_user_path %></div> 
<br /> 

<table> 
    <thead> 
        <tr> 
            <th>Name</th> 
            <th>Email</th> 
            <th></th> 
        </tr> 
    </thead> 
    <tbody> 
        <% @users.each do |user| %> 
            <tr> 
                <td><%= user.name %></td> 
                <td><%= user.email %></td> 
                <td> 
                    <%= link_to 'View', user %> 
                    <%= link_to 'Edit', edit_user_path(user) %> 
                    <%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure you want to delete this user?' } %> 
                </td> 
            </tr> 
        <% end %> 
    </tbody> 
</table> 