<h1>Tools</h1>
<table> 
   <thead> 
      <tr>
         <th>Name</th> 
         <th>Description</th> 
         <th>Weight</th> 
         <th>Price</th> 
         <th></th> 
      </tr> 
   </thead> 
   <tbody> 
      <% @tools.each do |tool| %> 
         <tr>
            <td><%= tool.name %></td>
            <td><%= tool.description %></td> 
            <td><%= tool.weight %></td> 
            <td><%= tool.price %></td> 
            <td><%= link_to 'View', tool %></td> 
         </tr> 
      <% end %> 
   </tbody>
</table> 