<%=form_for @location do |f|%>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :street %>
    <%= f.text_field :street %>

    <%= f.label :apartment %>
    <%= f.text_field :apartment %>

    <%= f.label :city %>
    <%= f.text_field :city %>

    <%= f.label :state %>
    <%= f.text_field :state %>

    <%= f.label :country %>
    <%= f.text_field :country %>

    <%= f.label :zipcode %>
    <%= f.number_field :zipcode %>

    <%= f.submit %>

    <%end%>