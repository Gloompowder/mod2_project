<h1>Orders</h1> 

<div><%= link_to 'Create Order', new_order_path %></div> 
<br /> 

<table> 
    <thead> 
        <tr> 
            <th>Date</th> 
            <th>Arrival Estimate</th> 
            <th>User</th> 
            <th>Total Price</th> 
            <th>Tax</th> 
            <th>Shipping Fee</th> 
            <th>Weight</th> 
            <th>Order Status</th> 
            <th></th> 
        </tr> 
    </thead> 
    <tbody> 
        <% @orders.each do |order| %> 
            <tr> 
                <td><%= order.date %></td> 
                <td><%= order.arrival_estimate %></td> 
                <td><%= order.user.name %></td> 
                <td><%= order.total_price %></td> 
                <td><%= order.tax %></td> 
                <td><%= order.shipping_fee %></td> 
                <td><%= order.weight %></td> 
                <td><%= order.order_status %></td>
                <td> 
                    <%= link_to 'View', order %> 
                    <%= link_to 'Edit', edit_order_path(order) %> 
                    <%= link_to 'Delete', order, method: :delete, data: { confirm: 'Are you sure you want to delete this order?' } %> 
                </td> 
            </tr> 
        <% end %> 
    </tbody> 
</table> 